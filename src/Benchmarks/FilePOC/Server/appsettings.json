// appsettings.json
{
  "RemoteFilesOptions": {
    "RootDirectory": "server_cache", // Adjust based on your OS and desired path
    "UseServerCache": true,
    "UseClientCache": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}